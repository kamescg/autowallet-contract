{
    "name": "autowallet-contract",
    "version": "0.0.1",
    "description": "AutoWallet Smart Contract",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "task": "hardhat",
        "compile": "hardhat --show-stack-traces --max-memory 8192 compile",
        "coverage": "HIDE_DEPLOY_LOG=true OPTIMIZER_DISABLED=true hardhat coverage",
        "clean": "rm -rf cache/ artifacts/",
        "deploy": "hardhat deploy --write true --network",
        "deploy:mainnet": "DEPLOY=mainnet hardhat deploy --write true --network mainnet",
        "deploy:fork": "DEPLOY=fork hardhat deploy --write true --network localhost",
        "deploy:rinkeby": "DEPLOY=rinkeby hardhat deploy --write true --network rinkeby",
        "deploy:goerli": "DEPLOY=goerli hardhat deploy --write true --network goerli",
        "deploy:matic": "DEPLOY=matic hardhat deploy --write true --network matic",
        "deploy:mumbai": "DEPLOY=mumbai hardhat deploy --write true --network mumbai",
        "format": "prettier --config .prettierrc --write **/*.ts",
        "format:file": "prettier --config .prettierrc --write",
        "hint": "solhint \"contracts/**/*.sol\"",
        "fork:start": "FORK_ENABLED=true hardhat node --no-reset --no-deploy",
        "fork:setup": "yarn impersonate-accounts && yarn distribute-ether",
        "fork:impersonate": "hardhat --network localhost fork:impersonate-accounts ",
        "fork:distribute": "hardhat --network localhost fork:distribute",
        "fork:flash": "hardhat --network localhost fork:flash",
        "verify": "hardhat etherscan-verify --license MIT --solc-input --network",
        "verify:etheruem": "hardhat etherscan:verify --network",
        "verify:polygon": "hardhat --config hardhat.config.polygon.js run ./scripts/verify.js --network",
        "test": "HIDE_DEPLOY_LOG=true OPTIMIZER_DISABLED=true hardhat --network hardhat test"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^4.3.2",
        "@weiroll/weiroll.js": "^0.3.0",
        "luxon": "^2.0.2"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "2.0.2",
        "@nomiclabs/hardhat-etherscan": "2.1.3",
        "@nomiclabs/hardhat-waffle": "2.0.1",
        "@openzeppelin/hardhat-upgrades": "1.6.0",
        "@types/chai": "4.2.15",
        "@types/debug": "4.1.5",
        "@types/mocha": "8.2.1",
        "@types/node": "14.14.32",
        "chai": "4.3.4",
        "chalk": "4.1.0",
        "debug": "4.3.1",
        "ethereum-waffle": "3.3.0",
        "ethers": "5.3.1",
        "hardhat": "2.6.2",
        "hardhat-abi-exporter": "2.1.2",
        "hardhat-dependency-compiler": "1.1.1",
        "hardhat-deploy": "0.7.0-beta.47",
        "hardhat-deploy-ethers": "0.3.0-beta.10",
        "hardhat-gas-reporter": "1.0.4",
        "hardhat-log-remover": "2.0.2",
        "prettier": "2.2.1",
        "solhint": "3.3.3",
        "solidity-coverage": "0.7.16",
        "ts-generator": "0.1.1",
        "ts-node": "9.1.1",
        "typescript": "4.2.3"
    },
    "files": [
        "LICENSE",
        "abis/**",
        "artifacts/**",
        "contracts/**",
        "deployments/**",
        "deploy/**"
    ]
}
